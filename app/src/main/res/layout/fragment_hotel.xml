                        android:layout_width="72dp"
                        android:layout_height="19dp"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="0sp"
                        android:textAppearance="@style/line"
                        android:textSize="16sp"
                        android:translationY="-0.05sp" />

                </RelativeLayout>

                <RelativeLayout
