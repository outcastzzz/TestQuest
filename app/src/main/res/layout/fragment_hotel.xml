            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="978dp"
            android:background="@drawable/bars_bars">

            <RelativeLayout
                android:id="@+id/button_next_screen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/button_next_screen">

                <RelativeLayout
                    android:id="@+id/labels_butt"
                    android:layout_width="343dp"
                    android:layout_height="19dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/btn_next"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal|center_vertical"
                        android:lineSpacingExtra="-1sp"
                        android:text="@string/btn_next"
                        android:textAppearance="@style/btn_next" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</ScrollView>