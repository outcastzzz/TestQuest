                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="374dp"
                android:background="@drawable/frame_1">

                <RelativeLayout
                    android:id="@+id/icons_star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <View
                        android:id="@+id/icon_star"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_star" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/icons_star"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="0sp"
                    android:textAppearance="@style/rating_title"
                    android:textSize="15sp"
                    android:translationY="-0.05sp" />

                <TextView
                    android:id="@+id/rating_title"
                    android:layout_width="90dp"
                    android:layout_height="19dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/rating"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="0sp"
                    android:textAppearance="@style/rating_title"
                    android:textSize="15sp"
                    android:translationY="-0.05sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="343dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="false"
                android:layout_marginStart="16dp"
                android:layout_marginTop="411dp"
                android:elegantTextHeight="false"
                android:gravity="top|center_vertical"
                android:lineSpacingExtra="0sp"
                android:text="@string/title"
                android:textAppearance="@style/title"
                android:textSize="22sp"
                android:translationY="-0.07sp" />

            <TextView
                android:id="@+id/hotel_place"
                android:layout_width="343dp"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="445dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:textAppearance="@style/hotel_place"
                android:textSize="14sp"
                android:translationY="-0.05sp" />

            <TextView
                android:id="@+id/min_price"
                android:layout_width="174dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="478dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:textAppearance="@style/price"
                android:translationY="-0.1sp" />

            <TextView
                android:id="@+id/price_for_it"
                android:layout_width="135dp"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="198dp"
                android:layout_marginTop="492dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:textAppearance="@style/tour_with_plane"
                android:textSize="15sp"
                android:translationY="-0.05sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondary_block"
            android:layout_width="375dp"
            android:layout_height="428dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="538dp"
            android:background="@drawable/frame_579">

            <TextView
                android:id="@+id/about_hotel"
                android:layout_width="343dp"
                android:layout_height="26dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="@string/about_hotel"
                android:textAppearance="@style/about_hotel"
                android:translationY="-0.07sp" />

            <RelativeLayout
                android:id="@+id/features_layout"
                android:layout_width="295dp"
                android:layout_height="66dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="58dp">

                <RelativeLayout
