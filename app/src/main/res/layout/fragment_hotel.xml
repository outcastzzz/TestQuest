                        <TextView
                            android:id="@+id/include_title"
                            android:layout_width="133dp"
                            android:layout_height="17dp"
                            android:layout_marginTop="19dp"
                            android:gravity="top"
                            android:lineSpacingExtra="0sp"
                            android:text="@string/benefits_title"
                            android:textAppearance="@style/benefits_title"
                            android:textSize="13sp"
                            android:translationY="-0.05sp" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/icon_arrow2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="289dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="8dp">

                    <View
                        android:id="@+id/vector_55_2"
                        android:layout_width="9dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/vector_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/not_include"
                    android:layout_width="169dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="131dp">

                    <RelativeLayout
                        android:id="@+id/vuesax_line2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true">

                        <View
                            android:id="@+id/tick_square2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/tick_square" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/not_include_tv_block"
                        android:layout_width="133dp"
                        android:layout_height="38dp"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:id="@+id/not_include_tv"
                            android:layout_width="123dp"
                            android:layout_height="19dp"
                            android:gravity="top"
                            android:lineSpacingExtra="0sp"
                            android:text="@string/benefits"
                            android:textAppearance="@style/benefits"
                            android:translationY="-0.05sp" />

                        <TextView
                            android:id="@+id/not_include_tv_title"
                            android:layout_width="133dp"
                            android:layout_height="17dp"
                            android:layout_alignParentBottom="true"
                            android:gravity="top"
                            android:lineSpacingExtra="0sp"
                            android:text="@string/benefits_title"
                            android:textAppearance="@style/benefits_title"
                            android:textSize="13sp"
                            android:translationY="-0.05sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/icons_icons3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="289dp"
                    android:layout_marginTop="138dp"
                    android:layout_marginEnd="8dp">

                    <View
                        android:id="@+id/vector_55_3"
                        android:layout_width="9dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/vector_arrow" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="375dp"
