                        android:layout_width="6dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/vector_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/include_rate"
                    android:layout_width="169dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="73dp">

                    <RelativeLayout
                        android:id="@+id/vuesax_tick"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true">

                        <View
                            android:id="@+id/tick_square"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/tick_square" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/include_rate_tv"
                        android:layout_width="133dp"
                        android:layout_height="38dp"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp">

                        <TextView
                            android:id="@+id/include"
                            android:layout_width="103dp"
                            android:layout_height="19dp"
                            android:gravity="top"
                            android:lineSpacingExtra="0sp"
                            android:text="@string/benefits"
                            android:textAppearance="@style/benefits"
